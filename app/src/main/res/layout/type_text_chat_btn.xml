<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">

    <EditText
        android:id="@+id/editText_inputMessenge"
        android:hint="@string/type_text"
        android:layout_marginLeft="@dimen/marginLeft_edt_chat"
        android:layout_width="@dimen/width_edtxt_chat_activity"
        android:paddingLeft="@dimen/marginLeft_edt_chat"
        android:layout_height="@dimen/height_edtxt_chat_activity" />

    <ImageButton
        android:id="@+id/imageButton_send"
        android:background="#00000000"
        android:layout_width="@dimen/size_icon_send"
        android:layout_height="@dimen/size_icon_send"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/mrL_icon_send"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_send" />
</LinearLayout>