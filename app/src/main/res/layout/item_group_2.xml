<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_group"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:showIn="@layout/activity_goup_chat"
    android:layout_marginLeft="@dimen/margin_cardview_item"
    android:layout_marginRight="@dimen/margin_cardview_item"
    tools:context=".GoupChatActivity"
    android:id="@+id/grChat_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:src="@drawable/br_room2" />

        <RelativeLayout
            android:id="@+id/txt_item_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txt_name_item_group_2"
                android:layout_width="@dimen/width_txt_name_item_group"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/mr_name_gr"
                android:layout_marginLeft="@dimen/mr_name_gr"
                android:text="@string/name_group2"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_name_gr"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/users_item_group"
                android:orientation="horizontal"
                android:layout_below="@+id/txt_name_item_group_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_icon_send">

                <ImageView
                    android:layout_width="@dimen/size_icon_users_item_group"
                    android:layout_height="@dimen/size_icon_users_item_group"
                    android:src="@mipmap/ic_user" />
                <TextView
                    android:id="@+id/number_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>



</RelativeLayout>
</RelativeLayout>